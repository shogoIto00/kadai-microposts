<% if current_user.like?(post) %>
    <%= form_with(model: current_user.likes.find_by(micropost_id: post.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :micropost_id, post.id %>
      <%= f.submit 'Unlike', class: 'btn btn-danger btn-sm' %>
    <% end %>
<% else %>
    <%= form_with(model: current_user.likes.build, local: true) do |f| %>
      <%= hidden_field_tag :micropost_id, post.id %>
      <%= f.submit 'Like', class: 'btn btn-primary btn-sm' %>
    <% end %>
<% end %>